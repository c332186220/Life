<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_background"
    android:orientation="vertical"
    tools:context="com.cxl.life.app.SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/currency_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_background"
        app:navigationIcon="@mipmap/ic_back"
        app:title="@string/activity_currency"
        app:titleTextColor="@color/white">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/currency_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/SwitchButtonStyle"
                app:kswBackColor="@drawable/switch_button_bg"
                app:kswThumbColor="@color/white"/>

            <TextView
                android:id="@+id/currency_bluetooth_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/item_padding_up_down"
                android:paddingLeft="@dimen/item_padding_left_right"
                android:paddingRight="@dimen/item_padding_left_right"
                android:paddingTop="@dimen/item_padding_up_down"
                android:text="开启蓝牙功能" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/item_padding_left_right"
            android:layout_marginRight="@dimen/item_padding_left_right"
            android:background="@color/body_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/currency_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/SwitchButtonStyle"
                app:kswBackColor="@drawable/switch_button_bg"
                app:kswThumbColor="@color/white"/>

            <TextView
                android:id="@+id/currency_wifi_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/item_padding_up_down"
                android:paddingLeft="@dimen/item_padding_left_right"
                android:paddingRight="@dimen/item_padding_left_right"
                android:paddingTop="@dimen/item_padding_up_down"
                android:text="开启WIFI功能" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/item_padding_left_right"
            android:layout_marginRight="@dimen/item_padding_left_right"
            android:background="@color/body_background" />

        <TextView
            android:id="@+id/about_app1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_body_currency"
            android:paddingBottom="@dimen/item_padding_up_down"
            android:paddingLeft="@dimen/item_padding_left_right"
            android:paddingRight="@dimen/item_padding_left_right"
            android:paddingTop="@dimen/item_padding_up_down"
            android:text="流量统计" />

    </LinearLayout>


</LinearLayout>
