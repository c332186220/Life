<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/item_form_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="6dp"
        android:text="回路标题"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/item_form_edit1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:background="@drawable/edit_fillet"
            android:gravity="center"
            android:hint="电压"
            android:inputType="numberDecimal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/item_form_edit2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:background="@drawable/edit_fillet"
            android:gravity="center"
            android:hint="电流"
            android:inputType="numberDecimal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_form_tv3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:background="@drawable/edit_fillet"
            android:drawableRight="@mipmap/spinner_right_down"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="请选择"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
