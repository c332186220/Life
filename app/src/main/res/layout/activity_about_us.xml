<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cxl.life.app.about.AboutUsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_background"
        app:navigationIcon="@mipmap/ic_back"
        app:title="@string/about_us"
        app:titleTextColor="@color/white">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawablePadding="4dp"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="@string/app_name"
        android:textColor="@color/body_text_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_version"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_version_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_body_currency"
            android:paddingBottom="@dimen/item_padding_up_down"
            android:paddingLeft="@dimen/item_padding_left_right"
            android:paddingRight="@dimen/item_padding_left_right"
            android:paddingTop="@dimen/item_padding_up_down"
            android:text="功能介绍" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/item_padding_left_right"
            android:layout_marginRight="@dimen/item_padding_left_right"
            android:background="@color/body_background" />

        <TextView
            android:id="@+id/about_version_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_body_currency"
            android:paddingBottom="@dimen/item_padding_up_down"
            android:paddingLeft="@dimen/item_padding_left_right"
            android:paddingRight="@dimen/item_padding_left_right"
            android:paddingTop="@dimen/item_padding_up_down"
            android:text="检查新版本" />

    </LinearLayout>

</RelativeLayout>
