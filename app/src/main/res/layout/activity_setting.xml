<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_background"
    android:orientation="vertical"
    tools:context="com.cxl.life.app.SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_background"
        app:navigationIcon="@mipmap/ic_back"
        app:title="@string/nav_setting"
        app:titleTextColor="@color/white">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_body_currency"
            android:paddingBottom="@dimen/item_padding_up_down"
            android:paddingLeft="@dimen/item_padding_left_right"
            android:paddingRight="@dimen/item_padding_left_right"
            android:paddingTop="@dimen/item_padding_up_down"
            android:text="关于乐享生活" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/item_padding_left_right"
            android:layout_marginRight="@dimen/item_padding_left_right"
            android:background="@color/body_background" />

        <TextView
            android:id="@+id/help_and_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_body_currency"
            android:paddingBottom="@dimen/item_padding_up_down"
            android:paddingLeft="@dimen/item_padding_left_right"
            android:paddingRight="@dimen/item_padding_left_right"
            android:paddingTop="@dimen/item_padding_up_down"
            android:text="帮助与反馈" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/item_padding_left_right"
            android:layout_marginRight="@dimen/item_padding_left_right"
            android:background="@color/body_background" />

        <TextView
            android:id="@+id/setting_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_body_currency"
            android:paddingBottom="@dimen/item_padding_up_down"
            android:paddingLeft="@dimen/item_padding_left_right"
            android:paddingRight="@dimen/item_padding_left_right"
            android:paddingTop="@dimen/item_padding_up_down"
            android:text="通用" />

    </LinearLayout>


</LinearLayout>
